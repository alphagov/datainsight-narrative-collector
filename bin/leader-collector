#!/usr/bin/env ruby

require 'rubygems'
require 'gli'

require_relative '../lib/leader'

include GLI

program_desc 'Collect the content for the masthead'

version 0.1

desc 'For the first request you need to pass in the authorisation token'
default_value nil
arg_name 'oauth token'
flag [:t,:token]

desc 'Print out the collected content'
command :print do |c|
  c.action do |global_options, options, args|
    puts Collectors::LeaderCollector.new(global_options[:token]).print 
  end
end

desc 'Publish the collected content to the queue'
command :broadcast do |c|
  c.action do |global_options, options, args|
    Collectors::LeaderCollector.new(global_options[:token]).broadcast
  end
end

exit GLI.run(ARGV)
